---
import '../styles/global.css';
import { ArrowUpRight, Zap, Code2, Sun, Moon, Palette } from 'lucide-react';
import LanguageSwitcher from '../components/LanguageSwitcher';
import ProjectList from '../components/ProjectList';
import { LanguageProvider } from '../components/LanguageContext';
import Bubbles from '../components/Bubbles';
import CookieConsent from '../components/CookieConsent';

interface Project {
  id: string;
  title: string;
  titleEn: string;
  description: string;
  descriptionEn: string;
  tags: string[];
  link: string;
  icon: string;
  category: string;
}

const projects: Project[] = [
  {
    id: 'turtelboost',
    title: 'Fahrschule TurtelBoost',
    titleEn: 'Driving School TurtelBoost',
    description: 'Moderne Fahrschule Website mit Online-Anmeldung, Preisübersicht und FAQ-Bereich.',
