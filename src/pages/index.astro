    tags: ['Astro', 'React', 'Tailwind'],
    link: 'http://turtelboost.portfoliodexedv.site/',
    icon: 'car',
    category: 'web'
  },
  {
    id: 'foodtruck',
    title: 'Foodtruck Website',
    titleEn: 'Foodtruck Website',
    description: 'Moderne Foodtruck-Website mit Speisekarte, Standorten und Event-Informationen.',
    descriptionEn: 'Modern foodtruck website with menu, locations and event information.',
    tags: ['Astro', 'React', 'Tailwind', 'Radix UI'],
    link: 'https://foodtruck.portfoliodexedv.site/',
    icon: 'utensils',
    category: 'web'
  },
  {
    id: 'placeholder-1',
    title: 'Projekt Alpha',
    titleEn: 'Project Alpha',
    description: 'Kommendes Projekt - demnächst verfügbar.',
    descriptionEn: 'Upcoming project - coming soon.',
    tags: ['Coming Soon'],
    link: '#',
    icon: 'terminal',
    category: 'coming'
  },
  {
    id: 'placeholder-2',
    title: 'Projekt Beta',
    titleEn: 'Project Beta',
    description: 'Kommendes Projekt - demnächst verfügbar.',
    descriptionEn: 'Upcoming project - coming soon.',
    tags: ['Coming Soon'],
    link: '#',
    icon: 'sparkles',
    category: 'coming'
  },
  {
    id: 'placeholder-3',
    title: 'Projekt Gamma',
    titleEn: 'Project Gamma',
    description: 'Kommendes Projekt - demnächst verfügbar.',
    descriptionEn: 'Upcoming project - coming soon.',
    tags: ['Coming Soon'],
    link: '#',
    icon: 'grid',
    category: 'coming'
  }
];
---

<!doctype html>
<html lang="de" data-theme="dark">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Portfolio - Meine erstellten Homepages und Webprojekte" />
    <title>Portfolio | Meine Webprojekte</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
  </head>
  <body class="min-h-screen bg-base-100 text-base-content noise-bg overflow-x-hidden">
    <!-- Background Effects -->
    <div class="fixed inset-0 pointer-events-none overflow-hidden">
      <div class="absolute top-[-20%] left-[-10%] w-[500px] h-[500px] bg-purple-600/20 rounded-full blur-[120px] animate-pulse"></div>
      <div class="absolute bottom-[-20%] right-[-10%] w-[600px] h-[600px] bg-pink-600/15 rounded-full blur-[120px] animate-pulse" style="animation-delay: 2s;"></div>
      <div class="absolute top-[40%] left-[50%] w-[400px] h-[400px] bg-amber-600/10 rounded-full blur-[100px] animate-pulse" style="animation-delay: 4s;"></div>
      <Bubbles client:load />
    </div>

    <!-- Navigation -->
    <nav class="relative z-10 border-b border-white/5 backdrop-blur-sm sticky top-0 bg-base-100/80">
      <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center">
            <Code2 className="w-5 h-5 text-white" />
          </div>
          <span class="font-bold text-xl tracking-tight">Portfolio</span>
        </div>
        <div class="flex items-center gap-3">
          <a href="#projects" class="text-base-content/60 hover:text-base-content transition-colors nav-link hidden sm:block" data-en="Projects" data-de="Projekte">Projekte</a>
          <a href="https://de.fiverr.com/s/XLyY1pZ" target="_blank" rel="noopener noreferrer" class="btn btn-sm gap-2 bg-green-500 hover:bg-green-600 text-white border-none">
            <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm5.562 8.248l-1.97 3.465c-.255.448-.79.672-1.253.672H9.61c-.463 0-.998-.224-1.253-.672L6.438 8.248c-.255-.448-.15-.95.233-1.253.382-.302.932-.302 1.315 0l1.48 2.59 1.48-2.59c.383-.302.933-.302 1.315 0 .383.302.488.805.233 1.253z"/></svg>
            Fiverr
          </a>
          <button id="theme-toggle" class="btn btn-sm btn-ghost btn-square">
            <Sun className="w-5 h-5 dark:hidden" />
            <Moon className="w-5 h-5 hidden dark:block" />
          </button>
          <LanguageSwitcher client:load />
        </div>
      </div>
    </nav>

    <!-- Hero Section -->
    <section class="relative z-10 py-24 lg:py-32">
      <div class="max-w-7xl mx-auto px-6">
        <div class="max-w-4xl">
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-base-300 border border-white/10 mb-8">
            <span class="w-2 h-2 rounded-full bg-success animate-pulse"></span>
            <span class="text-sm text-base-content/60" data-en="View available projects" data-de="Verfügbare Projekte ansehen">Verfügbare Projekte ansehen</span>
          </div>

          <h1 class="text-5xl lg:text-7xl font-extrabold leading-[1.1] tracking-tight mb-6">
            <span data-en="My" data-de="Meine">Meine</span> <span class="gradient-text">Homepages</span> <span data-en="& Web Projects" data-de="& Webprojekte">& Webprojekte</span>
          </h1>

          <p class="text-xl text-base-content/60 max-w-2xl mb-10 leading-relaxed" data-en="Welcome to my portfolio. Here you will find a selection of my created websites and web applications. Each project was developed with modern technologies and great attention to detail." data-de="Willkommen in meinem Portfolio. Hier finden Sie eine Auswahl meiner erstellten Websites und Webanwendungen. Jedes Projekt wurde mit modernen Technologien und viel Liebe zum Detail entwickelt.">
            Willkommen in meinem Portfolio. Hier finden Sie eine Auswahl meiner erstellten Websites und Webanwendungen. Jedes Projekt wurde mit modernen Technologien und viel Liebe zum Detail entwickelt.
          </p>

          <div class="flex flex-wrap gap-4">
            <a href="#projects" class="btn btn-primary btn-lg gap-2">
              <span data-en="View Projects" data-de="Projekte ansehen">Projekte ansehen</span>
              <ArrowUpRight className="w-5 h-5" />
            </a>
          </div>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mt-20 pt-10 border-t border-white/5">
          <div class="text-center">
            <div class="text-4xl font-bold gradient-text mb-2">4+</div>
            <div class="text-base-content/60" data-en="Projects" data-de="Projekte">Projekte</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-bold gradient-text mb-2">100%</div>
            <div class="text-base-content/60" data-en="Satisfaction" data-de="Zufriedenheit">Zufriedenheit</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-bold gradient-text mb-2">Modern</div>
            <div class="text-base-content/60" data-en="Tech-Stack" data-de="Tech-Stack">Tech-Stack</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-bold gradient-text mb-2">Kreativ</div>
            <div class="text-base-content/60" data-en="Designs" data-de="Designs">Designs</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Projects Section -->
    <section id="projects" class="relative z-10 py-20">
      <div class="max-w-7xl mx-auto px-6">
        <div class="flex flex-col md:flex-row md:items-end justify-between gap-4 mb-16">
          <div>
            <h2 class="text-4xl font-bold mb-4" data-en="Projects" data-de="Projekte">Projekte</h2>
            <p class="text-base-content/60 max-w-xl" data-en="Discover my latest work. Each project is unique and was designed according to individual requirements." data-de="Entdecken Sie meine neuesten Arbeiten. Jedes Projekt ist einzigartig und wurde nach den individuellen Anforderungen gestaltet.">
              Entdecken Sie meine neuesten Arbeiten. Jedes Projekt ist einzigartig und wurde nach den individuellen Anforderungen gestaltet.
            </p>
          </div>
        </div>

        <LanguageProvider client:only="react">
          <ProjectList projects={projects} />
        </LanguageProvider>
      </div>
    </section>

    <!-- Features Section -->
    <section class="relative z-10 py-20 border-t border-white/5">
      <div class="max-w-7xl mx-auto px-6">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold mb-4" data-en="What I Offer" data-de="Was ich biete">Was ich biete</h2>
          <p class="text-base-content/60 max-w-2xl mx-auto" data-en="Modern web development with a focus on user experience and performance." data-de="Moderne Webentwicklung mit Fokus auf Benutzererfahrung und Performance.">
            Moderne Webentwicklung mit Fokus auf Benutzererfahrung und Performance.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          <div class="p-8 rounded-2xl glass-card hover:border-primary/30 transition-all duration-300 group bg-base-200 border border-white/5">
            <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
              <Zap className="w-7 h-7 text-white" />
            </div>
            <h3 class="text-xl font-semibold mb-3" data-en="Fast Performance" data-de="Schnelle Performance">Schnelle Performance</h3>
            <p class="text-base-content/60" data-en="Optimized load times and smooth user experience through modern frameworks." data-de="Optimierte Ladezeiten und flüssige Benutzererfahrung durch moderne Frameworks.">
              Optimierte Ladezeiten und flüssige Benutzererfahrung durch moderne Frameworks.
            </p>
          </div>

          <div class="p-8 rounded-2xl glass-card hover:border-primary/30 transition-all duration-300 group bg-base-200 border border-white/5">
            <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-blue-500 to-cyan-500 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
              <Palette className="w-7 h-7 text-white" />
            </div>
            <h3 class="text-xl font-semibold mb-3" data-en="Modern Design" data-de="Modernes Design">Modernes Design</h3>
            <p class="text-base-content/60" data-en="Appealing, contemporary designs with a focus on usability." data-de="Ansprechende, zeitgemäße Designs mit Fokus auf Benutzerfreundlichkeit.">
              Ansprechende, zeitgemäße Designs mit Fokus auf Benutzerfreundlichkeit.
            </p>
          </div>

          <div class="p-8 rounded-2xl glass-card hover:border-primary/30 transition-all duration-300 group bg-base-200 border border-white/5">
            <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-amber-500 to-orange-500 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
              <Code2 className="w-7 h-7 text-white" />
            </div>
            <h3 class="text-xl font-semibold mb-3" data-en="Clean Code" data-de="Sauberer Code">Sauberer Code</h3>
            <p class="text-base-content/60" data-en="Maintainable, well-structured code following best practices." data-de="Wartbarer, gut strukturierter Code nach Best Practices.">
              Wartbarer, gut strukturierter Code nach Best Practices.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="relative z-10 py-8 border-t border-white/5 bg-base-200/50">
      <div class="max-w-7xl mx-auto px-6">
        <div class="flex flex-col md:flex-row items-center justify-between gap-4">
          <div class="flex items-center gap-3">
            <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center">
              <Code2 className="w-4 h-4 text-white" />
            </div>
            <span class="font-semibold">Portfolio</span>
          </div>
          <div class="flex gap-6 text-sm">
            <a href="/impressum" class="text-base-content/60 hover:text-primary transition-colors">Impressum</a>
            <a href="/datenschutz" class="text-base-content/60 hover:text-primary transition-colors">Datenschutz</a>
          </div>
          <p class="text-base-content/60 text-sm">
            © 2026 Dominic Klügl. <span data-en="All rights reserved" data-de="Alle Rechte vorbehalten">Alle Rechte vorbehalten</span>
          </p>
        </div>
      </div>
    </footer>

    <CookieConsent client:load />

    <script>
      // Theme Toggle
      function setTheme(theme) {
        localStorage.setItem('theme', theme);
        if (theme === 'light') {
          document.documentElement.classList.add('light');
          document.documentElement.classList.remove('dark');
        } else {
          document.documentElement.classList.add('dark');
          document.documentElement.classList.remove('light');
        }
      }

      const savedTheme = localStorage.getItem('theme') || 'dark';
      setTheme(savedTheme);

      document.getElementById('theme-toggle')?.addEventListener('click', () => {
        const currentTheme = localStorage.getItem('theme') || 'dark';
        const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
        setTheme(newTheme);
      });

      // Language
      function setLanguage(lang) {
        localStorage.setItem('language', lang);
        document.documentElement.lang = lang;
        document.documentElement.setAttribute('data-theme', lang === 'de' ? 'dark' : 'dark');

        document.querySelectorAll('[data-en][data-de]').forEach(el => {
          const enText = el.getAttribute('data-en');
          const deText = el.getAttribute('data-de');
          el.textContent = lang === 'de' ? deText : enText;
        });

        document.querySelectorAll('.nav-link').forEach(el => {
          const enText = el.getAttribute('data-en');
          const deText = el.getAttribute('data-de');
          el.textContent = lang === 'de' ? deText : enText;
        });

        const langBtn = document.getElementById('lang-btn');
        if (langBtn) {
          langBtn.textContent = lang === 'de' ? 'EN' : 'DE';
        }
      }

      const savedLang = localStorage.getItem('language') || 'de';
      setLanguage(savedLang);

      window.toggleLanguage = function() {
        const currentLang = document.documentElement.lang;
        const newLang = currentLang === 'de' ? 'en' : 'de';
        setLanguage(newLang);
      };
    </script>

    <style>
      body {
        font-family: 'Outfit', system-ui, sans-serif;
      }
    </style>
  </body>
</html>
